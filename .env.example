# RIQ LabMatch - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# OpenAI API Key (for matching algorithm and email drafting)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Brave Search API Key (for website discovery)
BRAVE_API_KEY=your-brave-api-key-here

# OpenAlex Contact Email (required for API usage)
OPENALEX_CONTACT_EMAIL=your-email@example.com

# Flask Secret Key (for session security)
SECRET_KEY=generate-a-secure-random-key-here

# Flask Configuration
FLASK_ENV=development
PORT=5001
UPLOAD_FOLDER=uploads
DATABASE_URL=sqlite:///instance/riq.db

# Password reset email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com
